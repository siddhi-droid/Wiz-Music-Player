<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_centerVertical="true"
    android:background="?selectableItemBackground"
    android:clickable="true">

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_above="@+id/trackCoverImage"
        android:layout_marginStart="12dp"
        android:layout_toEndOf="@+id/trackCoverImage"
        android:background="@color/divider" />


    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/trackCoverImage"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_margin="8dp"
        android:contentDescription="@string/track_image"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/audio_track" />

    <TextView
        android:id="@+id/trackTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="9dp"
        android:layout_marginTop="12dp"
        android:layout_toEndOf="@+id/trackCoverImage"
        android:ellipsize="end"
        android:fontFamily="@font/cabin"
        android:maxLines="1"
        android:textColor="@color/primaryTextColor"
        android:textSize="16sp"
        tools:text="Random text here" />

    <TextView
        android:id="@+id/trackArtist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/trackTitle"
        android:layout_marginStart="9dp"
        android:layout_toEndOf="@+id/trackCoverImage"
        android:fontFamily="@font/cabin"
        android:textColor="@color/secondaryTextColor"
        android:textSize="12sp"
        tools:text="Random text here" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@+id/trackArtist"
        android:layout_marginStart="12dp"
        android:layout_marginTop="16dp"
        android:layout_toEndOf="@+id/trackCoverImage"
        android:background="@color/divider" />

</RelativeLayout>